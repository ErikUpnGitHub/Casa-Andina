<div class="content-wrapper py-4">
  <div class="container-fluid">
    <span class="text text-info-title d-block mb-4">Editar Categoría de Servicio</span>

    <form action="/staff-crud-categoriaservicio/editar/<%= categoria.idCtgServicio %>" method="POST" enctype="multipart/form-data">
      <div class="row">
        <!-- Detalle ocupa todo el ancho -->
        <div class="col-md-12 mb-3">
          <label class="text-info-subtitle" for="detalle">Detalle</label>
          <input type="text" class="form-control" name="detalle" id="detalle" value="<%= categoria.detalle %>" required>
        </div>

        <!-- Precio y Estado comparten fila -->
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle" for="precio">Precio (S/.)</label>
          <input type="number" step="0.01" class="form-control" name="precio" id="precio" value="<%= categoria.precio %>" required>
        </div>

        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle" for="estado">Estado</label>
          <select class="form-select" name="estado" id="estado" required>
            <option value="activo" <%= categoria.estado === "activo" ? "selected" : "" %>>Activo</option>
            <option value="inactivo" <%= categoria.estado === "inactivo" ? "selected" : "" %>>Inactivo</option>
          </select>
        </div>

        <!-- Descripción -->
        <div class="col-md-12 mb-3">
          <label class="text-info-subtitle" for="descripcion">Descripción</label>
          <textarea class="form-control" name="descripcion" id="descripcion" rows="3" required><%= categoria.descripcion %></textarea>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-6">
          <label class="text-info-subtitle" for="imagen">Reemplazar imagen (opcional)</label>
          <input type="file" class="form-control" name="imagen" id="imagen" accept="image/png, image/jpeg">

          <div class="mt-3">
            <button type="submit" class="btn btn-custom me-2">Guardar Cambios</button>
            <a href="/staff-crud-categoriaservicio" class="btn btn-secondary">Cancelar</a>
          </div>
        </div>

        <div class="col-md-6">
          <label class="text-info-subtitle">Imagen actual:</label>
          <img src="/img/category-service/<%= categoria.idCtgServicio %>.png" alt="Imagen actual" class="img-fluid rounded border w-100" onerror="this.style.display='none'">
        </div>
      </div>
    </form>
  </div>
</div>

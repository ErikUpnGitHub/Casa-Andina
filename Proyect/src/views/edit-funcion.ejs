<div class="content-wrapper py-4">
  <div class="container-fluid">
    <span class="text text-info-title d-block mb-4">EDITAR FUNCIÓN</span>

    <div class="card p-4 rounded-4" style="background-color: var(--background-color); border: none;">
      <form action="/staff-crud-funcion/editar/<%= funcion.idFuncion %>" method="POST">
        <div class="mb-3">
          <label for="detalle" class="text-info-subtitle">Detalle de la función:</label>
          <input
            type="text"
            id="detalle"
            name="detalle"
            class="form-control"
            value="<%= funcion.detalle %>"
            required
          />
        </div>
        <div class="d-flex gap-2 flex-wrap">
          <button type="submit" class="btn btn-custom">Guardar Cambios</button>
          <a href="/staff-crud-funcion" class="btn btn-custom">Cancelar</a>
        </div>
      </form>
    </div>
  </div>
</div>

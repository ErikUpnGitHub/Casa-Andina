<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-md-12 mb-4">
            <span class="text tile-text d-block mb-3">
                <%= __('sb-activity') %>
            </span>

            <div class="row">
                <% activities.forEach(activity=> { %>
                    <div class="col-md-6 mb-4">
                        <div class="box-content d-flex shadow-sm h-100 overflow-hidden"
                            style="min-height: 220px; max-height: 220px;">

                            <img src="/img/activity/<%= activity.idActividad %>.png" alt="Imagen"
                                style="width: 240px; height: 100%; object-fit: cover;" />

                            <div class="p-3 d-flex flex-column justify-content-between flex-grow-1">
                                <div>
                                    <p class="text-info-subtitle mb-2">
                                        <%= activity.detalle %>
                                    </p>
                                    <p class="text-info-content mb-3">
                                        <%= activity.descripcion %>
                                    </p>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">

                                    <a href="/activity-schedule/<%= activity.idActividad %>"
                                        class="btn btn-primary mt-2 w-auto">
                                        VER HORARIOS
                                    </a>


                                    <span class="ms-3 text-info-title mt-2">
                                        <%= Number(activity.precio)===0 ? "gratis" : "S/" +
                                            Number(activity.precio).toFixed(2) %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>


            </div>

        </div>
    </div>
</div>
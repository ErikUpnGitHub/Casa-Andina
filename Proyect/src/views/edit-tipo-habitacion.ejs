<div class="content-wrapper py-4">
  <div class="container-fluid">
    <span class="text text-info-title d-block mb-4">EDITAR TIPO DE HABITACIÓN</span>

    <form action="/staff-crud-tipo-habitacion/editar/<%= tipoHabitacion.idTipoHbt %>" method="POST" enctype="multipart/form-data">
      <div class="row">
        <!-- Campos generales -->
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Nombre:</label>
          <input type="text" name="nombre" class="form-control" value="<%= tipoHabitacion.nombre %>" required>
        </div>
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Tamaño:</label>
          <input type="text" name="tamano" class="form-control" value="<%= tipoHabitacion.tamano %>" required>
        </div>
        <div class="col-md-12 mb-3">
          <label class="text-info-subtitle">Descripción:</label>
          <textarea name="descripcion" class="form-control" rows="3" required><%= tipoHabitacion.descripcion %></textarea>
        </div>
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Cama:</label>
          <input type="text" name="cama" class="form-control" value="<%= tipoHabitacion.cama %>" required>
        </div>
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Adultos:</label>
          <input type="number" name="adultos" class="form-control" value="<%= tipoHabitacion.adultos %>" required>
        </div>
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Niños:</label>
          <input type="number" name="ninos" class="form-control" value="<%= tipoHabitacion.ninos %>" required>
        </div>
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Precio:</label>
          <input type="number" name="precio" class="form-control" value="<%= tipoHabitacion.precio %>" required>
        </div>
      </div>

      <!-- Imagen y botones -->
      <div class="row mt-3">
        <!-- Columna izquierda: selector + botones -->
        <div class="col-md-6">
          <div class="mb-3">
            <label class="text-info-subtitle">Subir nueva imagen (opcional):</label>
            <input type="file" name="imagen" class="form-control" accept="image/*">
          </div>

          <div class="mt-3">
            <button type="submit" class="btn btn-custom me-2">Guardar cambios</button>
            <a href="/staff-crud-tipo-habitacion" class="btn btn-secondary">Cancelar</a>
          </div>
        </div>

        <!-- Columna derecha: imagen actual -->
        <div class="col-md-6">
          <label class="text-info-subtitle">Imagen actual:</label>
          <img src="/img/rooms/<%= tipoHabitacion.idTipoHbt %>/1.png" alt="Imagen actual"
            class="img-fluid rounded border w-100">
        </div>
      </div>
    </form>
  </div>
</div>

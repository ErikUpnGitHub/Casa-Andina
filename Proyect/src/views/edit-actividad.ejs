<div class="content-wrapper py-4">
  <div class="container-fluid">
    <span class="text text-info-title d-block mb-4">Editar Actividad</span>

    <form action="/staff-crud-actividad/editar/<%= actividad.idActividad %>" method="POST" enctype="multipart/form-data">
      <div class="row">
        <!-- Campos de texto grandes -->
        <div class="col-md-12 mb-3">
          <label class="text-info-subtitle" for="detalle">Detalle</label>
          <textarea name="detalle" id="detalle" class="form-control" required><%= actividad.detalle %></textarea>
        </div>

        <div class="col-md-12 mb-3">
          <label class="text-info-subtitle" for="descripcion">Descripción</label>
          <textarea name="descripcion" id="descripcion" class="form-control" rows="3"><%= actividad.descripcion %></textarea>
        </div>

        <!-- Campos en dos columnas -->
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle" for="duracion">Duración (minutos)</label>
          <input type="number" name="duracion" id="duracion" class="form-control" value="<%= actividad.duracion %>" required>
        </div>

        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle" for="precio">Precio</label>
          <input type="number" name="precio" id="precio" step="0.01" class="form-control" value="<%= actividad.precio %>" required>
        </div>
      </div>

      <div class="row mt-3">
        <!-- Columna izquierda: selector + botones -->
        <div class="col-md-6">
          <label class="text-info-subtitle" for="imagen">Subir nueva imagen (opcional):</label>
          <input type="file" name="imagen" id="imagen" accept="image/*" class="form-control">

          <div class="mt-3">
            <button type="submit" class="btn btn-custom me-2">Actualizar</button>
            <a href="/staff-crud-actividad" class="btn btn-secondary">Cancelar</a>
          </div>
        </div>

        <!-- Columna derecha: imagen actual -->
        <div class="col-md-6">
          <label class="text-info-subtitle">Imagen actual:</label>
          <img src="/img/activity/<%= actividad.idActividad %>.png" alt="Actividad" class="img-fluid rounded border w-100" onerror="this.style.display='none'">
        </div>
      </div>
    </form>
  </div>
</div>

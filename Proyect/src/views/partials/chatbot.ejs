<div id="chatIconContainer" onclick="toggleChatbox()">
  <img src="/img/chaskybot.png" alt="CHASKYBOT" style="width: 80px; height: 80px; border-radius: 50%;" />
</div>

<div id="chatbox" class="hidden">
  <h2>
    <img src="/img/chaskybot.png" alt="CHASKYBOT"
      style="width: 50px; height: 50px; vertical-align: middle; margin-right: 6px;" />
    <span class="text-title-chasky">CHASKYBOT</span>
  </h2>

  <div id="messages"></div>
  <div style="display: flex; gap: 8px;">
    <input type="text" id="userInput" placeholder="Escribe tu mensaje..." />
    <button id="sendBtn">Enviar</button>
  </div>
</div>
<div class="content-wrapper py-4">
  <div class="container-fluid">
    <span class="text text-info-title d-block mb-4">EDITAR HABITACIÓN</span>

    <form action="/staff-crud-habitacion/editar/<%= habitacion.idHabitacion %>" method="POST" enctype="multipart/form-data">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Tipo de Habitación:</label>
          <select name="idTipoHbt" class="form-control" required>
            <% tiposHabitacion.forEach(tipo => { %>
              <option value="<%= tipo.idTipoHbt %>" <%= tipo.idTipoHbt === habitacion.idTipoHbt ? 'selected' : '' %>>
                <%= tipo.nombre %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Número:</label>
          <input type="text" name="numero" class="form-control" value="<%= habitacion.numero %>" required>
        </div>

        <div class="col-md-6 mb-3">
          <label class="text-info-subtitle">Estado:</label>
          <select name="estado" class="form-control" required>
            <option value="disponible" <%= habitacion.estado === 'disponible' ? 'selected' : '' %>>Disponible</option>
            <option value="ocupado" <%= habitacion.estado === 'ocupado' ? 'selected' : '' %>>Ocupado</option>
            <option value="mantenimiento" <%= habitacion.estado === 'mantenimiento' ? 'selected' : '' %>>Mantenimiento</option>
          </select>
        </div>
      </div>

      <div class="d-flex gap-2 mt-2">
        <button type="submit" class="btn btn-custom">Guardar cambios</button>
        <a href="/staff-crud-habitacion" class="btn btn-custom">Cancelar</a>
      </div>
    </form>
  </div>
</div>

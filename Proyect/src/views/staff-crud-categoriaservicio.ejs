<div class="content-wrapper py-4">
  <div class="container-fluid">
    <span class="text text-info-title d-block mb-4">CATEGORÍAS DE SERVICIO</span>

    <a href="/staff-crud-categoriaservicio/registrar" class="btn btn-custom mb-3">Registrar nueva categoría</a>

    <div class="table-responsive">
      <table class="table align-middle mb-0 transparent-table">
        <thead>
          <tr>
            <th class="text-info-subtitle">ID</th>
            <th class="text-info-subtitle">Detalle</th>
            <th class="text-info-subtitle">Descripción</th>
            <th class="text-info-subtitle">Precio (S/.)</th>
            <th class="text-info-subtitle">Estado</th>
            <th class="text-info-subtitle">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% categorias.forEach(c => { %>
            <tr class="<%= c.estado === 'activo' ? '' : 'table-secondary' %> text-info-subtitle">
              <td><%= c.idCtgServicio %></td>
              <td><%= c.detalle %></td>
              <td><%= c.descripcion %></td>
              <td>S/ <%= Number(c.precio).toFixed(2) %></td>
              <td><%= c.estado %></td>
              <td>
                <div class="d-flex gap-2 flex-wrap">
                  <a href="/staff-crud-categoriaservicio/editar/<%= c.idCtgServicio %>" class="btn btn-custom">Editar</a>
                  <form action="/staff-crud-categoriaservicio/cambiar-estado/<%= c.idCtgServicio %>" method="POST" onsubmit="return confirm('¿Estás seguro?')">
                    <input type="hidden" name="estadoActual" value="<%= c.estado %>">
                    <button type="submit" class="btn btn-custom">
                      <%= c.estado === 'activo' ? 'Desactivar' : 'Activar' %>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
